# Tailscale Exit Node - Secrets Configuration
# Copy this file to: ~/.secrets/tailscale/secrets.tfvars
# 
# IMPORTANT: Never commit the actual secrets.tfvars file to version control!

# =============================================================================
# REQUIRED: Tailscale Credentials (all cloud providers)
# =============================================================================

# Your Tailscale API key
# Get it from: Tailscale Admin Console → Settings → Keys → Generate auth key
# Format: tskey-api-... or tskey-auth-...
tailscale_api_key = "tskey-api-XXXXXXXXXXXXXXXX-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# Your Tailscale tailnet identifier
# Usually your email address or organization name
tailscale_tailnet = "your-email@example.com"

# =============================================================================
# OPTIONAL: GCP-specific settings
# =============================================================================

# Google Cloud Project ID
# Required only when deploying to GCP
# gcp_project = "my-gcp-project-id"

# GCP zone (default: {region}-a)
# gcp_zone = "us-central1-b"

# =============================================================================
# OPTIONAL: OCI (Oracle Cloud) settings
# =============================================================================

# OCI uses ~/.oci/config for authentication (same as OCI CLI)
# The tenancy OCID is automatically read from your config profile.
# You only need to specify these if you want to override the defaults.

# OCI config profile name (default: DEFAULT)
# Use this if you have multiple profiles in ~/.oci/config
# oci_config_profile = "DEFAULT"

# OCI Tenancy OCID (optional - automatically read from ~/.oci/config profile)
# Only set this if you want to override what's in your config file
# oci_tenancy_ocid = "ocid1.tenancy.oc1..aaaaaaaxxxxxxxxxx"

# OCI Compartment OCID (optional - defaults to tenancy root)
# compartment_ocid = "ocid1.compartment.oc1..aaaaaaaxxxxxxxxxx"

# OCI OS type: "ubuntu" or "oracle-linux" (default: ubuntu)
# os_type = "ubuntu"

# OCI Flex shape settings (only for VM.Standard.A1.Flex or similar)
# instance_ocpus = 1
# instance_memory_gb = 6

# =============================================================================
# OPTIONAL: Azure-specific settings
# =============================================================================

# Azure Resource Group name (optional, defaults to "tailscale-exit-nodes")
# resource_group_name = "my-tailscale-nodes"

# =============================================================================
# OPTIONAL: Instance customization
# =============================================================================

# Custom hostname prefix for all exit nodes (default: ts-exit)
# instance_name_prefix = "mycompany-exit"

# AWS instance type (default: t3.nano - $0.004/hr)
# instance_type = "t3.nano"

# GCP machine type (default: e2-micro - free tier eligible)
# machine_type = "e2-micro"

# Azure VM size (default: Standard_B1ls - $0.0052/hr)
# vm_size = "Standard_B1ls"

# OCI instance shape (default: VM.Standard.E2.1.Micro - Always Free)
# instance_shape = "VM.Standard.E2.1.Micro"

# =============================================================================
# OPTIONAL: Exit Node Features
# =============================================================================

# Auto-approve exit node routes in Tailscale (default: true)
# When true, the exit node is immediately usable without manual approval
# auto_approve_exit_node = true

# Use fixed/static public IP (default: false for most providers)
# AWS: Allocates an Elastic IP
# GCP: Allocates a Static External IP  
# Azure: Always uses static IP by default
# OCI: Allocates a Reserved Public IP
# use_fixed_ip = false

# Tailscale ACL tags to apply to the exit node (default: ["tag:exit-node"])
# Required if you use autoApprovers in your Tailscale ACL policy
# tailscale_tags = ["tag:exit-node"]
